<%= form_for([@contact, Contact.new], url: contacts_path) do |f| %>
  <div class="row">
    <div class="col-md-6 form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", id: "name" %>
    </div>
    <div class="col-md-6 form-group">
      <label for="phone">Phone</label>
      <%= f.label :phone %>
      <%= f.text_field :phone, id:"phone", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 form-group">
      <%= f.label :email %>
      <%= f.text_field :email, id:"email", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 form-group">
      <%= f.label :message %>
      <%= f.text_area :message, id: "message", class:"form-control", cols: "30", rows: "8" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 form-group">
      <%= f.submit "Send Message", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>