<div class="slider-wrap">
  <div class="slider-item" style="background-image: url(<%= asset_path 'lidye-1Shk_PkNkNw-unsplash-Copy.jpg' %>);">

    <div class="container">
      <div class="row slider-text align-items-center justify-content-center">
        <div class="col-md-8 text-center col-sm-12 ">
          <h1 data-aos="fade-up">Our Events</h1>
          <p class="mb-5" data-aos="fade-up" data-aos-delay="100">Enjoyable events</p>
        </div>
      </div>
    </div>

  </div>
  <!-- END slider -->
</div>

<section class="section bg-light">
  <div class="container">
    <div class="row no-gutters">
      <% @events.each do |event| %>
        <div class="col-md-12">
          <div class="sched d-block d-lg-flex">
            <div class="bg-image order-2" style="background-image: url(<%= asset_path event.image_path %>);" data-aos="fade"></div>
            <div class="text order-1">
              <h3><%= event.title %></h3>
              <p><%= event.date_event.strftime("%d/%m/%Y") %></p>
              <p><%= event.time_event.to_formatted_s(:time) %></p>
              <p><%= link_to "Read More", event_path(event), class: "btn btn-primary btn-sm", method: "get" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>